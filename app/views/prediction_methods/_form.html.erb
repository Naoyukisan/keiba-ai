<!-- app/views/prediction_methods/_form.html.erb -->
<%= form_with model: @prediction_method, data: { turbo: false } do |f| %>
  <div class="mb-3">
    <%= f.label :name, "名称", class: "form-label fw-semibold" %>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :body, "本文（プロンプト）", class: "form-label fw-semibold" %>
    <%= f.text_area :body, class: "form-control", rows: 14, required: true %>
  </div>

  <div class="form-check form-switch mb-3">
    <%= f.check_box :active, class: "form-check-input", role: "switch", id: "pmActive" %>
    <%= f.label :active, "この予想方法を有効化", class: "form-check-label", for: "pmActive" %>
  </div>

  <div class="text-end">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
