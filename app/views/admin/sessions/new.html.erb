<% content_for :title, "管理者ログイン" %>

<div class="min-vh-100 d-flex align-items-center">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-8 col-xl-6">
        <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
          <div class="card-body p-4 p-lg-5">
            <h1 class="h4 text-center mb-4">管理者ログイン</h1>

            <%= form_with scope: :user, url: admin_session_path, method: :post, local: true do |f| %>
              <div class="mb-3">
                <%= f.label :email, "メールアドレス", class: "form-label" %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>

              <div class="mb-3">
                <%= f.label :password, "パスワード", class: "form-label" %>
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
              </div>

              <%# rememberable を使っていれば表示 %>
              <% if Devise.mappings[:user].rememberable? %>
                <div class="form-check mb-3">
                  <%= f.check_box :remember_me, class: "form-check-input", id: "admin_remember_me" %>
                  <%= f.label :remember_me, "ログイン状態を保持する", class: "form-check-label" %>
                </div>
              <% end %>

              <div class="d-grid gap-2">
                <%= f.submit "管理者としてログイン", class: "btn btn-primary btn-lg" %>
              </div>
            <% end %>

            <div class="text-center mt-4">
              <%= link_to "通常ログインへ戻る", new_user_session_path, class: "small" %>
            </div>
          </div>
        </div>

        <p class="text-center text-muted mt-3 small">
          管理者以外はログインできません
        </p>
      </div>
    </div>
  </div>
</div>
