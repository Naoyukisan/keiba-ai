<% content_for :title, "ログイン" %>

<!-- 画面中央寄せ（垂直・水平） -->
<div class="min-vh-100 d-flex align-items-center">
  <div class="container">
    <div class="row justify-content-center">
      <!-- 横幅は lg:10, xl:8 くらいで横長に -->
      <div class="col-12 col-lg-10 col-xl-8">

        <!-- 横長カード（2カラム） -->
        <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
          <div class="row g-0 align-items-stretch">

            <!-- 左：ブランド／説明（md以上で表示、スマホでは非表示） -->
            <div class="col-md-6 d-none d-md-flex flex-column justify-content-center p-4 p-lg-5 bg-light">
              <div class="mb-3">
                <div class="fw-bold display-6 text-primary mb-1">けいばAI</div>
                <div class="text-muted">AIでサクッと予想。履歴管理や改善もワンクリック。</div>
              </div>
              <ul class="text-muted small mb-0 ps-3">
              </ul>
            </div>

            <!-- 右：ログインフォーム -->
            <div class="col-12 col-md-6">
              <div class="p-4 p-lg-5">
                <h1 class="h4 fw-bold mb-4 text-center text-md-start">ログイン</h1>

                <%# <%= render("shared/flash") %> %>

                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="form-floating mb-3">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email",
                          class: "form-control", id: "login_email", placeholder: "name@example.com" %>
                    <label for="login_email">メールアドレス</label>
                  </div>

                  <div class="form-floating mb-2">
                    <%= f.password_field :password, autocomplete: "current-password",
                          class: "form-control", id: "login_password", placeholder: "********" %>
                    <label for="login_password">パスワード</label>
                  </div>

                  <% if devise_mapping.rememberable? %>
                    <div class="form-check form-switch mb-3">
                      <%= f.check_box :remember_me, class: "form-check-input", id: "remember_me" %>
                      <label class="form-check-label" for="remember_me">ログイン状態を保持</label>
                    </div>
                  <% end %>

                  <%= f.submit "ログイン", class: "btn btn-primary w-100 py-2 mb-2" %>
                <% end %>

                <div class="d-flex align-items-center my-3">
                  <hr class="flex-grow-1">
                  <span class="px-2 text-muted small">または</span>
                  <hr class="flex-grow-1">
                </div>

                <div class="d-grid gap-2">
                  <% if devise_mapping.registerable? %>
                    <%= link_to "新規登録はこちら", new_registration_path(resource_name), class: "btn btn-outline-secondary" %>
                  <% end %>
                  <%= link_to "パスワードをお忘れですか？", new_password_path(resource_name), class: "btn btn-link" %>
                </div>
              </div>
            </div>

          </div>
        </div>

        <p class="text-center text-muted small mt-3 mb-0">© <%= Time.current.year %> けいばAI</p>
      </div>
    </div>
  </div>
</div>
